services:
  db:
<% if (db === 'postgres') { -%>
    image: postgres:16
    container_name: <%= appSlug %>-db
    environment:
      POSTGRES_USER: <%= appSlug %>
      POSTGRES_PASSWORD: password
      POSTGRES_DB: <%= appSlug %>_dev
    ports:
      - "5432:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U <%= appSlug %>"]
      interval: 10s
      timeout: 5s
      retries: 5
<% } else if (db === 'mysql') { -%>
    image: mysql:8
    container_name: <%= appSlug %>-db
    environment:
      MYSQL_ROOT_PASSWORD: password
      MYSQL_DATABASE: <%= appSlug %>_dev
      MYSQL_USER: <%= appSlug %>
      MYSQL_PASSWORD: password
    ports:
      - "3306:3306"
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      interval: 10s
      timeout: 5s
      retries: 5
<% } else { -%>
    image: mongo:7
    container_name: <%= appSlug %>-db
    ports:
      - "27017:27017"
    healthcheck:
      test: ["CMD", "mongosh", "--eval", "db.adminCommand('ping')"]
      interval: 10s
      timeout: 5s
      retries: 5
<% } -%>
    volumes:
      - db_data:/data
    restart: unless-stopped

volumes:
  db_data:
    driver: local
