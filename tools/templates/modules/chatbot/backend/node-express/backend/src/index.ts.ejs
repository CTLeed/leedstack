import express from 'express';
import cors from 'cors';
import dotenv from 'dotenv';
<% if (modules.auth) { -%>
import authRoutes from './routes/auth';
<% } -%>
<% if (modules.payments) { -%>
import stripeRoutes from './routes/stripe';
<% } -%>
<% if (modules.contact) { -%>
import contactRoutes from './routes/contact';
<% } -%>
<% if (modules.admin) { -%>
import adminRoutes from './routes/admin';
<% } -%>
import chatbotRoutes from './routes/chatbot';

dotenv.config();

const app = express();
const PORT = process.env.PORT || 8080;

// CORS configuration - allow only the configured frontend URL
const allowedOrigins = [
  process.env.FRONTEND_URL
].filter(Boolean);

app.use(cors({
  origin: (origin, callback) => {
    if (!origin) return callback(null, true);
    if (allowedOrigins.indexOf(origin) !== -1) {
      callback(null, true);
    } else {
      callback(new Error('Not allowed by CORS'));
    }
  },
  credentials: true
}));

app.use(express.json());

// Example route
app.get('/api/example', (req, res) => {
  res.json({
    message: 'Hello from node-express backend!',
    timestamp: new Date().toISOString()
  });
});

// Module routes
<% if (modules.auth) { -%>
app.use('/api/auth', authRoutes);
<% } -%>
<% if (modules.payments) { -%>
app.use('/stripe', stripeRoutes);
<% } -%>
<% if (modules.contact) { -%>
app.use('/api/contact', contactRoutes);
<% } -%>
<% if (modules.admin) { -%>
app.use('/api/admin', adminRoutes);
<% } -%>
app.use('/api/chatbot', chatbotRoutes);

app.listen(PORT, () => {
  console.log(`âœ… Server running on http://localhost:${PORT}`);
  console.log(`ðŸ“¡ API endpoint: http://localhost:${PORT}/api/example`);
  console.log(`ðŸ’¬ Chatbot endpoint: http://localhost:${PORT}/api/chatbot`);
});
